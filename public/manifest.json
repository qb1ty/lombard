{
  "manifest_version": 3,
  "name": "React Vite Extension",
  "version": "1.0.0",

  "action": {
    "default_popup": "index.html"
  },

  "background": {
    "service_worker": "src/background/background.js"
  },

  "permissions": ["storage"],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/contentScript.js"]
    }
  ]
}
